-- Subquery (for simpler queries)
SELECT *
FROM (
    SELECT * FROM job_postings_fact
    WHERE EXTRACT(MONTH FROM job_posted_date) = 1
) AS january_jobs

-- CTE (for more comples queries)
WITH january_jobs AS (
    SELECT * FROM job_postings_fact
    WHERE EXTRACT(MONTH FROM job_posted_date) = 1
)
SELECT * FROM january_jobs;

SELECT 
    company_id,
    name AS company_name
FROM company_dim
WHERE company_id IN(
    SELECT company_id
    FROM job_postings_fact
    WHERE job_no_degree_mention = TRUE
)

WITH company_job_count AS (
    SELECT 
        company_id, 
        COUNT(*) AS total_jobs
    FROM job_postings_fact 
    GROUP BY company_id
)

SELECT 
    company_dim.name AS company_name,
    company_job_count.total_jobs AS total_jobs
FROM company_dim
LEFT JOIN company_job_count ON company_job_count.company_id = company_dim.company_id
ORDER BY total_jobs DESC;

-- Practice 
SELECT 
    job_count_per_skill.skill_id,
    skills_dim.skills
FROM
(
    SELECT
        skill_id,
        COUNT(job_id) AS job_count 
    FROM skills_job_dim
    GROUP BY skill_id
) AS job_count_per_skill
LEFT JOIN skills_dim ON skills_dim.skill_id = job_count_per_skill.skill_id
ORDER BY job_count_per_skill.job_count DESC;

SELECT 
    company_id,
    job_count,
    CASE 
        WHEN job_count < 10 THEN 'Small'
        WHEN job_count BETWEEN 10 AND 50 THEN 'Medium'
        ELSE 'Large'
    END AS company_category
FROM (
    SELECT
        company_id,
        COUNT(job_id) AS job_count
    FROM job_postings_fact
    GROUP BY company_id
) AS job_count_per_company
ORDER BY company_id;